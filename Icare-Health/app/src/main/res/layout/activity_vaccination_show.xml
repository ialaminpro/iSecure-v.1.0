<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff7fbff"
            android:id="@+id/relativeLayout5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/textView15"
            android:layout_marginTop="37dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name :"
                android:id="@+id/textView17"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="39dp"
                android:textColor="#ff000000"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" Date :"
                android:id="@+id/textView19"
                android:paddingTop="30dp"
                android:textColor="#ff000000"
                android:layout_below="@+id/textView17"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Description :"
                android:id="@+id/textView21"
                android:paddingTop="30dp"
                android:textColor="#ff000000"
                android:paddingLeft="5dp"
                android:layout_below="@+id/textView19"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Injected :"
                android:id="@+id/textView23"
                android:paddingTop="30dp"
                android:layout_below="@+id/textView21"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ff000000"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Description :"
                android:id="@+id/textView25"
                android:paddingTop="30dp"
                android:layout_below="@+id/textView23"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ff000000"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Next Dose :"
                android:id="@+id/textView26"
                android:paddingTop="30dp"
                android:layout_below="@+id/textView25"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ff000000"
                android:paddingLeft="5dp" />

            <EditText
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:id="@+id/etVName"
                android:layout_alignTop="@+id/textView17"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:id="@+id/etVInjectionDate"

                android:focusable="false"
                android:layout_above="@+id/etVDescription1"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:id="@+id/etVDescription1"
                android:layout_alignBottom="@+id/textView21"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:id="@+id/etVNextDate"
                android:focusable="false"
                android:layout_alignBottom="@+id/textView26"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:id="@+id/etVDescription2"
                android:layout_above="@+id/etVNextDate"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cbInjected"
                android:textSize="18dp"
                android:layout_above="@+id/textView25"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView25"
                android:layout_alignStart="@+id/etVDescription2" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vaccine"
        android:id="@+id/textView15"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff44c041"
        android:textStyle="bold|italic" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="close"
        android:id="@+id/btnVClose"
        android:layout_marginBottom="117dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>